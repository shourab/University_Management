@using UniversityManagementSystem.Models
@model TeacherGom

@{
    //Layout = null;
    List<DepartmentGOM> departments = ViewBag.departments;
    List<DesignationGOM> designation = ViewBag.designation;

    string msg = @ViewBag.msg;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SaveTeacher</title>

    <style>
        .field-validation-error {
            color: red;
            font-style: italic;
        }
    </style>

</head>
<body>

    <br><br><br><br><br>
<div class="container">
    @using (Html.BeginForm())
    {
        <fieldset>
            <legend>Save Teacher</legend>

            <table>
                <tr>
                    <td>@Html.LabelFor(m => m.Name)</td>
                    <td>@Html.TextBoxFor(m => m.Name)</td>
                    <td>@Html.ValidationMessageFor(m => m.Name)</td>
                </tr>

                <tr>
                    <td>@Html.LabelFor(m => m.Address)</td>
                    <td>@Html.TextBoxFor(m => m.Address)</td>
                    <td>@Html.ValidationMessageFor(m => m.Address)</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(m => m.Email)</td>
                    <td>@Html.TextBoxFor(m => m.Email)</td>
                    <td>@Html.ValidationMessageFor(m => m.Email)</td>
                </tr>

                <tr>
                    <td>@Html.LabelFor(m => m.ContactNo)</td>
                    <td>@Html.TextBoxFor(m => m.ContactNo)</td>
                    <td>@Html.ValidationMessageFor(m => m.ContactNo)</td>
                </tr>


                <tr>
                    <td>@Html.LabelFor(m => m.DesignationId)</td>
                    <td>@Html.DropDownListFor(m => m.DesignationId, new SelectList(designation, "Id", "Name"), "--Select--")</td>
                    <td>@Html.ValidationMessageFor(m => m.DesignationId)</td>
                </tr>

                <tr>
                    <td>@Html.LabelFor(m => m.DepartmentId)</td>
                    <td>@Html.DropDownListFor(m => m.DepartmentId, new SelectList(departments, "DeptId", "DeptName"), "--Select--")</td>
                    <td>@Html.ValidationMessageFor(m => m.DepartmentId)</td>
                </tr>

                <tr>
                    <td>@Html.LabelFor(m => m.CreditTaken)</td>
                    <td>@Html.TextBoxFor(m => m.CreditTaken)</td>
                    <td>@Html.ValidationMessageFor(m => m.CreditTaken)</td>
                </tr>


                <tr>
                    <td></td>
                    <td><input type="submit" name="submit" id="submit" value="Save"/></td>
                </tr>

                <tr>
                    <td>

                    </td>
                </tr>

            </table>


            @if (@ViewBag.msg != null)
            {
                if (@msg.StartsWith("Please"))
                {
                    <i><font size="+2" color="Red"><label>Please Enter Unique Email</label></font></i>
                }

                else
                {
                    <font size="+2" color="Green"><label>Data Successfully Entered</label></font>
                }

            }

        </fieldset>
    }

</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
